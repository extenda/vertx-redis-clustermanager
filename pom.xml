  <scm>
    <connection>scm:git:https://github.com/extenda/vertx-redis-clustermanager.git</connection>
    <developerConnection>scm:git:ssh://github.com:extenda/vertx-redis-clustermanager.git</developerConnection>
    <tag>HEAD</tag>
